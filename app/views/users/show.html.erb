<body class='user_page'>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to 'Home', sauropsids_path, :class => "navbar-brand saur_bar" %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <%= link_to 'Pterosaurs', pterosaur_index_path, :class => "navbar-brand saur_bar" %>
	        <%= link_to 'Ichthyosaurs', ichthyosaur_index_path, :class => "navbar-brand saur_bar" %>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li>	
				<div class="user_header">
					<% if current_user %>
					  <%= link_to "Log Out", logout_path, :class => "user_header" %>
					<% else %>
					  <%= link_to "Sign Up", signup_path, :class => "user_header" %> 
					  <%= link_to "Log In", login_path, :class => "user_header" %>
					<% end %>
				</div>
				<% flash.each do |name,msg| %>
					<%= content_tag :div, msg, id: "flash_#{name}" %>
				<% end %>
		</li>
	          </ul>
	        </li>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>



	<div class='adopted_sauropsids'>
			<% if current_user  %>
				<% if current_user.sauropsids.length > 0 %>
					<h1 id="user_headline"><%= current_user.name %>'s Adopted Sauropsids!</h1>
					<% current_user.sauropsids.each do |s| %>
					<div class="row">
						<div class="col-md-3"></div>
						<div class="col-md-3"><%= image_tag s.image, size:"200x200", alt: "sauropsid_pic", class: "img-circle", id: "user_saurop_pic"%></div>
						<div class="col-md-3 saurop_name_div"> <%= link_to(s, html_options = {class: 'adopted_sauropsids', id: 'saurop_name'}) do %>
					  	<%= s.name %>
					  	<% end %> </div>
					  	<div class="col-md-3"></div>
						</div>
					<% end %>
					<% else %>
						No Adopted Sauropsids to show yet..
					<% end %>
			<% else %>
				Log in please!
			<% end %>

	</div>

</body>